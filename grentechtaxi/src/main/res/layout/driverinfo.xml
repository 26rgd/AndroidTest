<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainbackcolor"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <com.powercn.grentechtaxi.view.CircleImageView
            android:layout_width="@dimen/ImageHeadLarge"
            android:layout_height="@dimen/ImageHeadLarge"
            android:layout_gravity="center"
            android:src="@drawable/icon_driver"></com.powercn.grentechtaxi.view.CircleImageView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/marginLeft"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_drivername"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="王师父"
                    android:textColor="@color/textColorTripWaitInfo"
                    android:textSize="@dimen/textSize" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_marginLeft="@dimen/marginLeft"
                        android:layout_width="43dp"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/label_evaluate"
                        android:id="@+id/imageView6"
                        android:layout_weight="1" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/imageView5"
                            android:src="@drawable/icon_score"
                            android:layout_width="@dimen/ImageSizeTrip16px"
                            android:layout_height="@dimen/ImageSizeTrip16px"
                            android:layout_marginLeft="@dimen/marginLeft"
                            android:layout_gravity="center"
                            />

                        <TextView
                            android:id="@+id/tv_driverstar"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center_vertical"
                            android:text="4.9"
                            android:textColor="@color/WHITE"
                            android:layout_weight="1" />
                    </LinearLayout>
                </FrameLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="2dp"
                android:gravity="center_vertical"
                android:layout_weight="1">

                <TextView
                    android:text="粤 B001N3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_carno"
                    android:textColor="@color/textColorTripWaitInfo"
                    android:textSize="@dimen/textSizeCallCar"
                    android:background="@drawable/layout_cir"
                     />

                <TextView
                    android:text="白色"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/marginLeft10"
                    android:id="@+id/tv_carcolor"
                    android:textColor="@color/textColorTripWaitInfo"
                    android:textSize="@dimen/textSizeCallCar"
                     />

                <TextView
                    android:id="@+id/tv_cartype"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/marginLeft10"
                    android:text="本田思域"
                    android:textColor="@color/textColorTripWaitInfo"
                    android:textSize="@dimen/textSizeCallCar"
                     />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_sms"
                    android:src="@drawable/icon_message"
                    android:layout_width="@dimen/ImageSizeTrip36px"
                    android:layout_height="@dimen/ImageSizeTrip36px"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/marginRight" />

                <ImageView
                    android:id="@+id/iv_call"
                    android:src="@drawable/icon_phone_dengdai"
                    android:layout_width="@dimen/ImageSizeTrip36px"
                    android:layout_height="@dimen/ImageSizeTrip36px"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/marginRight" />

            </LinearLayout>

        </LinearLayout>
        >
    </LinearLayout>
</LinearLayout>