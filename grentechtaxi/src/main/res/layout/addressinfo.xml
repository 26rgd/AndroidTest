<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_addressinfo"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/mainbackcolor">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin5"
        android:layout_marginTop="@dimen/margin5"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_line1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="出发地"
            android:textColor="@color/textColorTripWaitAddr"
            android:textSize="@dimen/textSizeCallCar" />

        <ImageView
            android:id="@+id/iv_line1"
            android:layout_width="@dimen/ImageSizeTrip16px"
            android:layout_height="@dimen/ImageSizeTrip16px"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/marginLeft"
            android:src="@drawable/icon_start" />

        <TextView
            android:id="@+id/tv_add_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/marginLeft"
            android:text="南山科技中三路"
            android:textColor="@color/textColorTripWaitAddr"
            android:textSize="@dimen/textSizeCallCar" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin5"
        android:layout_marginTop="@dimen/margin5"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_line2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="目的地"
            android:textColor="@color/textColorTripWaitAddr"
            android:textSize="@dimen/textSizeCallCar" />

        <ImageView
            android:id="@+id/iv_line2"
            android:layout_width="@dimen/ImageSizeTrip16px"
            android:layout_height="@dimen/ImageSizeTrip16px"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/marginLeft"
            android:src="@drawable/icon_end" />

        <TextView
            android:id="@+id/tv_add_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/marginLeft"
            android:text="南山科技中三路国人大厦"
            android:textColor="@color/textColorTripWaitAddr"
            android:textSize="@dimen/textSizeCallCar" />
    </LinearLayout>
</LinearLayout>