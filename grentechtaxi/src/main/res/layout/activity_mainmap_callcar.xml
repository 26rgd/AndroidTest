<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_mainmap_callcar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/layout_bk"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout_time"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="15dp">

        <ImageView
            android:layout_width="@dimen/ImageSizeTrip16px"
            android:layout_height="@dimen/ImageSizeTrip16px"
            app:srcCompat="@drawable/icon_time"
            android:id="@+id/imageView3"
            android:layout_gravity="center_vertical"
             />

        <TextView
            android:text="上车时间"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/textSizeCallCar"
            android:layout_marginLeft="20dp"
            android:textColor="@color/textColorOrder1"
              />

        <TextView
            android:text="现在"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_select_time"
            android:layout_weight="1"
            android:gravity="right"
            android:textSize="@dimen/textSizeCallCar"
            android:layout_marginRight="40dp"
            android:layout_gravity="center_vertical"
            android:textColor="@color/textColorOrder1"
              />
    </LinearLayout>

    <include layout="@layout/activity_divisive"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="@dimen/ImageSizeTrip16px"
            android:layout_height="@dimen/ImageSizeTrip16px"
            android:layout_gravity="center"
            app:srcCompat="@drawable/icon_start" />

        <TextView
            android:id="@+id/et_mainmap_taxi_depart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:text="出发地"
            android:textColor="@color/textColorOrder1"
            android:textSize="@dimen/textSizeCallCar" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/margin"
        >

        <include layout="@layout/activity_divisive"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></include>



    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="@dimen/ImageSizeTrip16px"
            android:layout_height="@dimen/ImageSizeTrip16px"
            android:layout_gravity="center"
            app:srcCompat="@drawable/icon_end" />

        <TextView
            android:id="@+id/et_mainmap_taxi_dest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:text="去哪儿"
            android:textColor="@color/textColorOrder2"
            android:textSize="@dimen/textSizeCallCar" />
    </LinearLayout>


</LinearLayout>
