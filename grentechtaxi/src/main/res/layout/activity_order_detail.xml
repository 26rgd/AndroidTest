<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_oder_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainbackcolor"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/TitleHeight"
        android:background="@color/MainMapTitleBackColor"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_order_detail_back"
            android:layout_width="@dimen/TitleBackImageSize"
            android:layout_height="@dimen/TitleBackImageSize"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:src="@drawable/btn_back" />

        <TextView
            android:id="@+id/tv_title_back_hint"
            style="@style/TitleTextViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="订单详情" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/margin10"
            android:layout_marginBottom="@dimen/margin10"
            android:layout_marginLeft="@dimen/margin"
            android:layout_marginRight="@dimen/margin">

            <include
                layout="@layout/driverinfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></include>
        </LinearLayout>

        <include
            layout="@layout/activity_divisive"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></include>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/margin10"
            android:layout_marginBottom="@dimen/margin10"
            android:layout_marginLeft="@dimen/margin"
            android:layout_marginRight="@dimen/margin">

            <include
                layout="@layout/addressinfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></include>
        </LinearLayout>

        <include
            layout="@layout/activity_divisive"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></include>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/lv_order_detail_star"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/margin"
            android:scrollbars="none"></android.support.v7.widget.RecyclerView>

        <include
            layout="@layout/activity_divisive"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></include>

        <Button
            android:id="@+id/btn_order_detail_sub"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin"
            android:background="@drawable/btn_clickcolor_radius"
            android:text="评价"
            android:textColor="@color/textColorTripWaitInfo" />

    </LinearLayout>

</LinearLayout>
