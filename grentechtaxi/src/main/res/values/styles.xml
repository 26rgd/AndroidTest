<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/BLACK</item>
    </style>

    <style name="Theme.NoTitle" parent="AppTheme">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="android:textColorHint">@color/GRAY</item>
        <item name="android:textColor">@color/BLACK</item>
    </style>

    <style name="editTextSeachStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/edit_border</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:drawableStart">@drawable/search_icon</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:imeOptions">actionSearch</item>
        <item name="android:padding">5dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">17sp</item>
        <item name="android:cursorVisible">true</item>
        <item name="android:textColor">@color/textColorCallCar</item>
        <item name="android:hint">搜索</item>
    </style>

    <style name="TaxiEditText" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/textColorCallCar</item>
        <item name="colorControlActivated">@color/textColorCallCar</item>
        <item name="android:ems">20</item>

        <item name="android:paddingLeft">10dp</item>
        <item name="android:layout_marginLeft">5dp</item>
    </style>

    <style name="AlertDialog" parent="@android:Theme.DeviceDefault.Light.Dialog">
        <!-- 这里设置背景为透明，为了隐藏边框 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <!-- 这里是修改顶部标题背景颜色，具体颜色自己定，可以是图片 -->
        <item name="android:topDark">@color/MainMapTitleBackColor</item>
        <!-- 这里是修改内容区域背景颜色 -->
        <item name="android:centerDark">@color/MainMapTitleBackColor</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Translucent</item>
    </style>

    <style name="TitleTextViewStyle">
        <!-- 这里设置背景为透明，为了隐藏边框 -->
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <!-- 这里是修改顶部标题背景颜色，具体颜色自己定，可以是图片 -->
        <item name="android:textSize">@dimen/textSizeTitle</item>
        <!-- 这里是修改内容区域背景颜色 -->
        <item name="android:textColor">@color/WHITE</item>
    </style>

    <style name="textViewOrderItem">
        <!-- 这里设置背景为透明，为了隐藏边框 -->
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <!-- 这里是修改顶部标题背景颜色，具体颜色自己定，可以是图片 -->
        <item name="android:textSize">@dimen/textSizeCallCar</item>
        <!-- 这里是修改内容区域背景颜色 -->
        <item name="android:textColor">@color/BLACK</item>
    </style>

    <style name="marginNoTop">
        <item name="android:layout_marginLeft">@dimen/marginLeft</item>
        <item name="android:layout_marginRight">@dimen/marginRight</item>
        <item name="android:layout_marginBottom">@dimen/marginBottom</item>
    </style>

</resources>
