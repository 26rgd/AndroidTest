<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/backgroud"
    android:layout_height="match_parent">
    <include
        android:id="@+id/title_findpassword1"
        layout="@layout/common_titlebar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/TitleHeight"></include>

    <LinearLayout
        android:paddingTop="@dimen/margin"
        android:layout_marginLeft="@dimen/margin10"
        android:layout_marginRight="@dimen/margin10"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="200dp">
        <include layout="@layout/item_phone"></include>
        <include layout="@layout/divisive"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"></include>
        <include layout="@layout/item_phonecrc"></include>
        <include layout="@layout/divisive"></include>
    </LinearLayout>

    <Button
        android:id="@+id/bt_find1_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="120dp"
        android:layout_marginLeft="@dimen/margin10"
        android:layout_marginRight="@dimen/margin10"
        android:background="@drawable/btn_clickcolor_radius"
        android:text="下一步"
        android:textColor="@color/textColorDefautl"
        android:textSize="@dimen/text32px" />
</LinearLayout>