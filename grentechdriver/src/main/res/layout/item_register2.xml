<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/textColorDefautl">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/heighRegisterLine"
        android:layout_marginBottom="@dimen/margin5"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_registeritem_title"
            style="@style/registerLabel"
            android:gravity="center"
            android:text="颜        色" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/margin">

            <TextView
                android:id="@+id/tv_registeritem_content"
                style="@style/registerEdit"
                />
            <ImageView
                android:layout_marginTop="25dp"
                android:layout_marginRight="20dp"
                android:layout_gravity="right"
                android:layout_width="@dimen/ImageSizeTrip16px"
                android:layout_height="@dimen/ImageSizeTrip16px"
                android:src="@mipmap/arrow_right_blue"
                android:id="@+id/iv_registeritem_detail" />
        </FrameLayout>

    </LinearLayout>
    <include layout="@layout/divisive"></include>
</LinearLayout>