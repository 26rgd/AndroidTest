<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/WHITE"
    android:clickable="true"

    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <include
        layout="@layout/common_titlebar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/TitleHeight"></include>

    <LinearLayout
        android:id="@+id/la_login_form1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin5"
        android:layout_marginRight="@dimen/margin5"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/heighRegisterLine"
            android:layout_marginBottom="@dimen/margin5"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/textview00"
                style="@style/registerLabel"
                android:gravity="center"
                android:text="姓        名" />
            <EditText
                android:id="@+id/tv_register_name"
                style="@style/registerEdit"
                android:ems="10"
                android:hint="请输入车主姓名"
                android:inputType="number" />
        </LinearLayout>
        <include layout="@layout/activity_divisive"></include>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/heighRegisterLine"
            android:layout_marginBottom="@dimen/margin5"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/textview01"
                style="@style/registerLabel"
                android:gravity="center"
                android:text="驾驶证号" />
            <EditText
                android:id="@+id/tv_register_driverlicence1"
                style="@style/registerEdit"
                android:ems="10"
                android:hint="请输入车主驾驶证号"
                android:inputType="number" />
        </LinearLayout>
        <include layout="@layout/activity_divisive"></include>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/heighRegisterLine"
            android:layout_marginBottom="@dimen/margin5"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/textview02"
                style="@style/registerLabel"
                android:gravity="center"
                android:text="行驶证号" />
            <EditText
                android:id="@+id/tv_register_driverlicence2"
                style="@style/registerEdit"
                android:ems="10"
                android:hint="请输入行驶证号"
                android:inputType="number" />
        </LinearLayout>
        <include layout="@layout/activity_divisive"></include>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/heighRegisterLine"
            android:layout_marginBottom="@dimen/margin5"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/textview03"
                style="@style/registerLabel"
                android:gravity="center"
                android:text="城        市" />


            <FrameLayout
                android:layout_marginLeft="@dimen/margin"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tv_register_city"
                    style="@style/registerEdit"
                    />
                <ImageView
                    android:layout_marginTop="25dp"
                    android:layout_marginRight="20dp"
                    android:layout_gravity="right"
                    android:layout_width="@dimen/ImageSizeTrip16px"
                    android:layout_height="@dimen/ImageSizeTrip16px"
                    app:srcCompat="@mipmap/arrow_right_blue"
                    android:id="@+id/iv_register_city" />
            </FrameLayout>
        </LinearLayout>
        <include layout="@layout/activity_divisive"></include>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/heighRegisterLine"
            android:layout_marginBottom="@dimen/margin5"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/textview04"
                style="@style/registerLabel"
                android:gravity="center"
                android:text="车牌号码" />
            <EditText
                android:id="@+id/tv_register_carno"
                style="@style/registerEdit"
                android:ems="10"
                android:hint="请输入车牌号码"
                android:inputType="number" />
        </LinearLayout>
        <include layout="@layout/activity_divisive"></include>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/heighRegisterLine"
            android:layout_marginBottom="@dimen/margin5"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/textview05"
                style="@style/registerLabel"
                android:gravity="center"
                android:text="车架号码" />
            <EditText
                android:id="@+id/tv_register_carriage"
                style="@style/registerEdit"
                android:ems="10"
                android:hint="请输入车架号码"
                android:inputType="number" />
        </LinearLayout>
        <include layout="@layout/activity_divisive"></include>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/heighRegisterLine"
            android:layout_marginBottom="@dimen/margin5"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/textview06"
                style="@style/registerLabel"
                android:gravity="center"
                android:text="车        型" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin">

                <TextView
                    android:id="@+id/tv_register_cartype"
                    style="@style/registerEdit"
                      />
                <ImageView
                    android:layout_marginTop="25dp"
                    android:layout_marginRight="20dp"
                    android:layout_gravity="right"
                    android:layout_width="@dimen/ImageSizeTrip16px"
                    android:layout_height="@dimen/ImageSizeTrip16px"
                    app:srcCompat="@mipmap/arrow_right_blue"
                    android:id="@+id/iv_register_cartype" />
            </FrameLayout>

        </LinearLayout>

        <include layout="@layout/activity_divisive"></include>



        <Button
            android:id="@+id/bt_login_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:background="@drawable/btn_clickcolor_radius"
            android:text="完成"
            android:textColor="@color/textColorDefautl"
            android:textSize="@dimen/textSize"
            android:textStyle="bold" />
    </LinearLayout>


</LinearLayout>
