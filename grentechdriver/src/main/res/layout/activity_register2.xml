<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/WHITE"
    android:clickable="true"

    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <include
        layout="@layout/common_titlebar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/TitleHeight"></include>

    <include
        android:id="@+id/item_name"
        layout="@layout/item_register1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></include>

    <include
        android:id="@+id/item_driverlicence"
        layout="@layout/item_register1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></include>

    <include
        android:id="@+id/item_carlicence"
        layout="@layout/item_register1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></include>

    <include
        android:id="@+id/item_city"
        layout="@layout/item_register2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></include>


    <include
        android:id="@+id/item_carno"
        layout="@layout/item_register3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></include>

    <include
        android:id="@+id/item_carriage"
        layout="@layout/item_register1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></include>

    <include
        android:id="@+id/item_cartype"
        layout="@layout/item_register2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></include>


    <include
        android:id="@+id/item_carcolor"
        layout="@layout/item_register2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></include>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/bt_login_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_clickcolor_radius"
            android:text="完成"
            android:textColor="@color/textColorDefautl"
            android:textSize="@dimen/textSize" />
    </FrameLayout>


</LinearLayout>
