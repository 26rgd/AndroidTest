<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/textColorDefautl">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/heighRegisterLine"
        android:layout_marginBottom="@dimen/margin5"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_registeritem3_title"
            style="@style/registerLabel"
            android:gravity="center"
            android:text="车牌号码" />

        <Spinner
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:entries="@array/province"
            android:id="@+id/spinner"
            android:background="@drawable/bg_paizhao"
            android:dropDownSelector="@color/maintitlebackcolor"
            android:popupBackground="@color/WHITE" />

        <EditText
            android:id="@+id/tv_registeritem3_content"
            style="@style/registerEdit"
            android:ems="10"
            android:hint="请输入车牌号码"
            android:maxLength="6"
            android:inputType="text" />

    </LinearLayout>
    <include layout="@layout/divisive"></include>
</LinearLayout>