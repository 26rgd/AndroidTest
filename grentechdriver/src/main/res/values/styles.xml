<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/BLACK</item>
    </style>

    <style name="Theme.NoTitle" parent="AppTheme">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!--<item name="android:windowAnimationStyle">@style/activityAnimation</item>-->
        <item name="android:textColorHint">@color/GRAY</item>
        <item name="android:textColor">@color/BLACK</item>
    </style>

    <style name="Theme.NoTitleTranslucent" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!--<item name="android:windowAnimationStyle">@style/activityAnimation</item>-->
        <item name="android:textColorHint">@color/GRAY</item>
        <item name="android:textColor">@color/BLACK</item>
        <!--<item name="windowBackground">@color/transparent</item>-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <!-- Note that we use the base animation style here (that is no
             animations) because we really have no idea how this kind of
             activity will be used. -->
        <item name="android:windowAnimationStyle">@android:style/Animation</item>

    </style>

    <!-- animation 样式 -->
    <!--<style name="activityAnimation" parent="@android:style/Animation">-->
        <!--<item name="android:activityOpenEnterAnimation">@anim/slide_right_in</item>-->
        <!--<item name="android:activityOpenExitAnimation">@anim/slide_left_out</item>-->
        <!--<item name="android:activityCloseEnterAnimation">@anim/slide_left_in</item>-->
        <!--<item name="android:activityCloseExitAnimation">@anim/slide_right_out</item>-->
    <!--</style>-->

    <style name="editTextSeachStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:drawablePadding">5dp</item>

        <item name="android:gravity">center_vertical</item>
        <item name="android:imeOptions">actionSearch</item>
        <item name="android:padding">5dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">17sp</item>
        <item name="android:cursorVisible">true</item>
        <item name="android:textColor">@color/textColorCallCar</item>
        <item name="android:hint">搜索</item>
    </style>

    <style name="TaxiEditText" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/textColorCallCar</item>
        <item name="colorControlActivated">@color/textColorCallCar</item>
        <item name="android:ems">20</item>

        <item name="android:paddingLeft">10dp</item>
        <item name="android:layout_marginLeft">5dp</item>
    </style>

    <style name="AlertDialog" parent="@android:Theme.DeviceDefault.Light.Dialog">
        <!-- 这里设置背景为透明，为了隐藏边框 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <!-- 这里是修改顶部标题背景颜色，具体颜色自己定，可以是图片 -->
        <item name="android:topDark">@color/MainMapTitleBackColor</item>
        <!-- 这里是修改内容区域背景颜色 -->
        <item name="android:centerDark">@color/MainMapTitleBackColor</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Translucent</item>
    </style>

    <style name="TitleTextViewStyle">
        <!-- 这里设置背景为透明，为了隐藏边框 -->
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <!-- 这里是修改顶部标题背景颜色，具体颜色自己定，可以是图片 -->
        <item name="android:textSize">@dimen/textSizeTitle</item>
        <!-- 这里是修改内容区域背景颜色 -->
        <item name="android:textColor">@color/WHITE</item>
    </style>

    <style name="textViewOrderItem">
        <!-- 这里设置背景为透明，为了隐藏边框 -->
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <!-- 这里是修改顶部标题背景颜色，具体颜色自己定，可以是图片 -->
        <item name="android:textSize">@dimen/textSizeCallCar</item>
        <!-- 这里是修改内容区域背景颜色 -->
        <item name="android:textColor">@color/BLACK</item>
    </style>

    <style name="marginNoTop">
        <item name="android:layout_marginLeft">@dimen/marginLeft</item>
        <item name="android:layout_marginRight">@dimen/marginRight</item>
        <item name="android:layout_marginBottom">@dimen/marginBottom</item>
    </style>

    <style name="registerLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/heighRegisterLine</item>
        <item name="android:layout_marginLeft">@dimen/marginLeft</item>
        <item name="android:layout_marginRight">@dimen/marginRight</item>
        <item name="android:layout_marginBottom">@dimen/marginBottom</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:textColor">@color/textColorRegisterLabel</item>
        <item name="android:textSize">@dimen/textSize</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="registerEdit">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/heighRegisterLine</item>
        <item name="android:layout_marginLeft">@dimen/marginBottom</item>
        <item name="android:layout_marginRight">@dimen/marginBottom</item>
        <item name="android:textColor">@color/textColorRegisterLabel</item>
        <item name="android:textSize">@dimen/textSize</item>
        <item name="android:gravity">left</item>
        <item name="android:background">@null</item>
    </style>

</resources>
